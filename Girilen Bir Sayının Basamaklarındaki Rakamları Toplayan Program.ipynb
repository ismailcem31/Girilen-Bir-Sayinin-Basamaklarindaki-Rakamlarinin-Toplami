   "source": [
    "# Kullanıcıdan bir sayı al\n",
    "sayi = int(input(\"Lütfen bir sayı giriniz: \"))\n",
    " \n",
    "# 0'dan girilen sayıya kadar olan sayıları topla\n",
    "toplam = 0\n",
    "for i in range(sayi + 1):\n",
    "    toplam += i\n",
    " \n",
    "# Toplamı yazdır\n",
    "print(\"Girdiğiniz sayıya kadar olan sayıların toplamı:\", toplam)"
   ]
